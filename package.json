{
  "name": "trek",
  "version": "0.0.1",
  "description": "Fast Async Web Framework For Modern Node.js",
  "homepage": "https://trekjs.com/",
  "repository": "trekjs/trek",
  "author": {
    "name": "Fangdun Cai",
    "email": "cfddream@gmail.com",
    "url": "fundon.me"
  },
  "license": "MIT",
  "keywords": [
    "async",
    "async/await",
    "framework",
    "middleware",
    "mvc",
    "rest",
    "server",
    "trek",
    "web"
  ],
  "main": "lib/index.js",
  "scripts": {
    "bench": "cd benchmarks; make all",
    "clean": "rm -rf coverage .nyc_output",
    "lint": "xo",
    "precommit": "lint-staged",
    "test": "xo && nyc ava"
  },
  "dependencies": {
    "dotenv": "4.0.0",
    "globby": "6.1.0",
    "lodash.get": "4.4.2",
    "lodash.has": "4.5.2",
    "lodash.set": "4.3.2",
    "pino": "4.7.1",
    "trek-engine": "1.0.3",
    "trek-middleware": "1.2.0",
    "trek-router": "1.2.0",
    "trek-sessions": "0.1.6"
  },
  "devDependencies": {
    "ava": "0.22.0",
    "eslint-config-prettier": "2.3.0",
    "husky": "0.14.3",
    "lint-staged": "4.0.4",
    "nyc": "11.1.0",
    "parseurl": "1",
    "prettier": "1.6.1",
    "request": "2.81.0",
    "request-promise": "4.2.1",
    "xo": "0.18.2"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "lib"
  ],
  "ava": {
    "concurrency": 5,
    "failFast": true,
    "files": [
      "test/**/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "xo",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "nyc": {
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "xo": {
    "ignores": [
      "examples/**"
    ],
    "extends": "prettier"
  }
}
